<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

<div class="accordion section-{{ section.id }}">
  <div class="accordion-container page-width">
    <h2 class="large-title">{{ section.settings.title }}</h2>
    {% for block in section.blocks %}
      <div class="set">
        <div class="open-div" style="display: flex; padding: 10px 0px;">
          <div style="width: 90px; display: flex; justify-content: center;">
          <img src="{{ block.settings.icon | img_url }}" alt="{{ block.settings.image.alt | escape }}">
          </div>
          <div style="width: calc( 100% - 130px); display: flex; justify-content: center; flex-direction: column;">
            <span style="font-weight: 600;">{{ block.settings.title }}</span>
            <span>{{ block.settings.desc }}</span>
          </div>
          <div style="width: 40px; display: flex; justify-content: center; flex-wrap: wrap; align-content: center;">
            <i class="fa fa-angle-down"></i>
          </div>
        </div>
        <div class="content">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt | escape }}">
          {% endif %}
          {{ block.settings.content }}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<script>
$(document).ready(function() {
  $(".set > .open-div").on("click", function() {
    if ($(this).hasClass("active")) {
      $(this).removeClass("active");
      $(this)
        .siblings(".content")
        .slideUp(200);
      $(".set > div i")
        .removeClass("fa-angle-up")
        .addClass("fa-angle-down");
    } else {
      $(".set >div i")
        .removeClass("fa-angle-up")
        .addClass("fa-angle-down");
      $(this)
        .find("i")
        .removeClass("fa-angle-down")
        .addClass("fa-angle-up");
      $(".set > .open-div").removeClass("active");
      $(this).addClass("active");
      $(".content").slideUp(200);
      $(this)
        .siblings(".content")
        .slideDown(200);
    }
  });
});
</script>

<style>
.section-{{ section.id }} h2 {
  color: {{ section.settings.title_color }}
}
.accordion-container{
  position: relative;
}
.accordion-container h2 {
  text-align: center;
  margin-bottom: 50px;
}
.set{
  position: relative;
  width: 100%;
  height: auto;
  border: 1px solid #ddd;
  margin-bottom: 15px;
  border-radius: 10px;
}
.set > span{
  display: block;
  padding: 10px 15px;
  text-decoration: none;
  color: #000;
  -webkit-transition:all 0.2s linear;
  -moz-transition:all 0.2s linear;
  transition:all 0.2s linear;
  font-size: 18px;
  line-height: 28px;
  font-weight: 500;
}
.set > span i{
  float: right;
  margin-top: 2px;
}
.content{
  display:none;
}
.content p {
  padding: 10px 15px;
  margin: 0;
  color: #333;
}
div.content img {
  padding-left: 20px;
  width: 230px;
  height: auto;
}
</style>
{% schema %}
  {
    "name": "FAQs image",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Frequently Asked Question"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title Color",
        "default": "#000000"
      }
    ],
    "blocks": [
    {
      "type": "faq",
      "name": "faq",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
    ],
    "presets": [
      {
        "name": "FAQs image"
      }
    ]
  }
{% endschema %}
